<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TripWallet">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_one"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:paddingRight="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="4dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Trip"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="105dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/card_img"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oops, No card is added"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="40dp"
            android:layout_marginBottom="30dp"
            android:textSize="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click below to add a card,you can add any card (credit,debit etc.)"
            android:textAllCaps="false"
            android:textColor="#413F3F"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="30dp"
            android:layout_marginBottom="30dp"
            android:textFontWeight="100"
            android:textSize="20dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:paddingLeft="120dp"
            android:paddingRight="80dp"
            android:background="@drawable/background_add_btn"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:text="Add a card"
            android:textColor="#ffffff"
            android:onClick="ToAddCard"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:textAllCaps="false" />


    </LinearLayout>

</RelativeLayout>
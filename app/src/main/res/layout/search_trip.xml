<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".SearchTrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_one"
        android:orientation="horizontal">

            <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                android:paddingRight="1dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="4dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Trip"
                android:textSize="23sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:background="@drawable/background_home"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="center">

                                <ImageButton
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_gps_fixed_black_24dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:text="Current location"/>

                            </LinearLayout>


                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEDED" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="center">

                                <ImageButton
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@null"
                                    android:src="@drawable/ic_location_on_black_24dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="20sp"
                                    android:textColor="#000000"
                                    android:text="123 Motorway Road  599"/>

                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteX="0dp"
            android:scrollbars="none"
            tools:layout_editor_absoluteY="51dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="51dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:gravity="left"
                                            android:layout_gravity="left"
                                            android:layout_marginBottom="7dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="5dp"
                                                android:textSize="20sp"
                                                android:textColor="#000000"
                                                android:text="Pickup Time"/>

                                        </LinearLayout>


                                    </LinearLayout>




                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_home"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:gravity="left"
                                            android:layout_gravity="left"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:textSize="20sp"
                                                android:textColor="#000000"
                                                android:text="2:30 PM"/>

                                        </LinearLayout>

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="20dp"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:gravity="center">

                                            <ImageButton
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:background="@null"
                                                android:src="@drawable/ic_query_builder_black_24dp"
                                                android:layout_gravity="center"
                                                android:layout_margin="10dp"/>


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:gravity="left"
                                            android:layout_gravity="left"
                                            android:layout_marginBottom="7dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:textSize="20sp"
                                                android:textColor="#000000"
                                                android:text="Date"/>

                                        </LinearLayout>


                                    </LinearLayout>




                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_home"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:gravity="left"
                                            android:layout_gravity="left"
                                            android:layout_marginBottom="15dp"
                                            android:layout_marginTop="15dp"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:textSize="20sp"
                                                android:textColor="#000000"
                                                android:text="Today"/>

                                        </LinearLayout>

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="right"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="20dp"
                                        android:gravity="center">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:gravity="center">

                                            <ImageButton
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:background="@null"
                                                android:src="@drawable/ic_date_range_black_24dp"
                                                android:layout_gravity="center"
                                                android:layout_margin="10dp"/>


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:elevation="2dp"
                            android:background="@drawable/background_create"
                            android:textSize="20dp"
                            android:onClick="ToAvailableRides"
                            android:text="Search"
                            android:textColor="#ffffff"
                            android:textAllCaps="false" />




                    </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_overlap"
    tools:context=".VerifyPhoneNumber">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:elevation="0dp"
            android:paddingRight="1dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:paddingLeft="4dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:paddingRight="1dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Sign in"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:paddingLeft="4dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp">


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="What's the code"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:layout_gravity="left"
            android:gravity="left"
            android:lineHeight="25dp"
            android:layout_marginBottom="10dp"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the code sent it +233 456 64545"
            android:textAllCaps="false"
            android:textColor="#929090"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_marginBottom="30dp"
            android:textFontWeight="100"
            android:textSize="20dp" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:layout_marginTop="30dp"
            android:gravity="center">


            <EditText
                android:id="@+id/editText"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/country_code"
                android:background="@drawable/selector_input_new"
                android:hint="0"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/editText"
                android:background="@drawable/selector_input_new"
                android:hint="0"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/editText1"
                android:background="@drawable/selector_input_new"
                android:hint="0"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/editText2"
                android:background="@drawable/selector_input_new"
                android:hint="0"
                android:inputType="number"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/editText3"
                android:background="@drawable/selector_input_new"
                android:hint="0"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />

        </RelativeLayout>



        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:elevation="2dp"
            android:padding="50dp"
            android:layout_gravity="right"
            android:background="@drawable/background_verify"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:onClick="ToCreateTrip"
            android:textColor="#ffffff"
            android:textAllCaps="false" />


    </LinearLayout>

</RelativeLayout>